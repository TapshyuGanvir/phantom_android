<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reveloOrgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="0.06"
            android:adjustViewBounds="true"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:text="6Simplex Software Solutions"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="@color/accent_color"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/reveloLogoId"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:adjustViewBounds="true"
            android:src="@drawable/revelo_logo_big" />

        <TextView
            android:id="@+id/reveloAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="0.10"
            android:adjustViewBounds="true"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="@string/app_name"
            android:visibility="visible"
            android:textAlignment="center"
            android:textColor="@color/phantom_black"
            android:textSize="@dimen/_28sdp" />

        <TextView
            android:id="@+id/reveloTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="0.10"
            android:adjustViewBounds="true"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/accent_color"
            android:textSize="@dimen/_15sdp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/apkdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/updateAvailableTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:clickable="true"
        android:text="Update Available... Click here"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/developedbytv"
        app:layout_constraintEnd_toEndOf="@id/developedbytv"
        app:layout_constraintStart_toStartOf="@id/developedbytv" />

    <TextView
        android:id="@+id/developedbytv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/developed_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

